print( 'perlin' )

local camera = Camera()
camera:SetScreenSize( 1024, 1024 )
camera:SetFilename( 'perlin.jpg' )

camera:LookAt(
	0,0,30,
	0,0,0,
	0,1,0,
	60
)

local gen = PrimitiveGenerator()

local width = 10.0
local height = 10.0

local model = PolygonModel()
local meshdata = gen:Quad( width, height )
model:Create( meshdata )
model:SetShader( 'perlin.frag' )

local analy = require("Analyzer").PolygonAnalyzer()
analy:Execute( model )
print( analy:MinX() )
print( analy:MaxX() )
print( analy:MinY() )
print( analy:MaxY() )
print( analy:MinZ() )
print( analy:MaxZ() )

render { camera, model }
