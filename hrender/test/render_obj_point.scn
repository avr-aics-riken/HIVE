
print('Render Obj')
local camera = Camera()
camera:SetScreenSize(1024, 1024)
camera:SetFilename('render_obj_point.jpg')

camera:LookAt(
	0,0,300,
	0,0,0,
	0,1,0,
	60
)


local obj = LoadModule("ObjLoader")
obj:Load('bunny.obj')

local model = PointModel()
local pointdata = obj:PointData()
model:Create(pointdata)
model:SetShader('white.frag')

render {camera, model}
