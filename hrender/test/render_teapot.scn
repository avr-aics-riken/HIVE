
print('Render Teapot')
local camera = Camera()
camera:SetScreenSize(1024, 1024)
camera:SetFilename('render_teapot.jpg')

camera:LookAt(
	0,10,30,
	0,3,0,
	0,1,0,
	60
)

local gen = PrimitiveGenerator()

local model = PolygonModel()
local meshdata = gen:Teapot(3.0)
model:Create(meshdata)
model:SetShader('normal.frag')

local analy = LoadModule("Analyzer").PolygonAnalyzer()
--[[analy:Execute(model)
print(analy:MinX())
print(analy:MaxX())
print(analy:MinY())
print(analy:MaxY())
print(analy:MinZ())
print(analy:MaxZ())
]]
local core = LoadModule("RenderPluginSURFACE")
core:render {camera, model}
